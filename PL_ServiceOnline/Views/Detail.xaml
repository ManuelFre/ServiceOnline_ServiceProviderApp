                </Grid>
            </ScrollViewer>

        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="750,10,10,10">
            <Button Content="Auftragsdaten ändern" Margin="10" Height="40" Command="{Binding BtnApplyChanges}"/>

        </StackPanel>
    </Grid>
</UserControl>

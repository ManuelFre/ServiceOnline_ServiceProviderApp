<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL_ServiceOnline.Views"
             xmlns:Converter="clr-namespace:PL_ServiceOnline.Converter" x:Class="PL_ServiceOnline.Views.Detail"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="1000" >
    <UserControl.Resources>
        <Converter:StringToBoolean x:Key="StringToBoolean"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource Locator}" Mode="OneWay" Path="DetailVm"/>
    </UserControl.DataContext>

    <Grid>


        <StackPanel Orientation="Horizontal" Margin="0,0,312,0">


            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,0,403,10">


                <Grid Margin="50,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="37.532"/>
                        <RowDefinition Height="2.468"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="405"/>
                    </Grid.ColumnDefinitions>


                    <Label Content="CustomerId:"                Grid.Row="0"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Firstname:"                 Grid.Row="1"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Lastname:"                  Grid.Row="2"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Address:"                   Grid.Row="3"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Zip:"                       Grid.Row="4"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="City:"                      Grid.Row="5"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Phone:"                     Grid.Row="6"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Email:"                     Grid.Row="7"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="OrderItemId:"               Grid.Row="8"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="OrderId:"                   Grid.Row="9"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="PreferedDate:"              Grid.Row="10" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Servicedescription:"        Grid.Row="11" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="BookedItems:"               Grid.Row="12" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="IsAllInclusive:"            Grid.Row="13" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="Finalprice:"                Grid.Row="14" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="OrderedDateTime:"           Grid.Row="15" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="CustomerNotice:"            Grid.Row="16" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="IsFinished:"                Grid.Row="17" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="IsConfirmed:"               Grid.Row="18" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="AddittionalCost:"           Grid.Row="19" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="ServiceProviderComment:"    Grid.Row="20" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>
                    <Label Content="OrderItemReports:"          Grid.Row="21" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="36" Margin="0,2" Width="200"/>



                    <TextBox Grid.Column="1" Text="{Binding CustomerId}"                Width="400" Grid.Row="0"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Firstname}"                 Width="400" Grid.Row="1"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Lastname}"                  Width="400" Grid.Row="2"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Address}"                   Width="400" Grid.Row="3"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Zip}"                       Width="400" Grid.Row="4"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding City}"                      Width="400" Grid.Row="5"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Phone}"                     Width="400" Grid.Row="6"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Email}"                     Width="400" Grid.Row="7"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding OrderItemId}"               Width="400" Grid.Row="8"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding OrderId}"                   Width="400" Grid.Row="9"  HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding PreferedDate}"              Width="400" Grid.Row="10" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Servicedescription}"        Width="400" Grid.Row="11" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding BookedItems}"               Width="400" Grid.Row="12" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsAllInclusive, Converter={StaticResource StringToBoolean}}" Width="400" Grid.Row="13" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding Finalprice}"                Width="400" Grid.Row="14" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding OrderedDateTime}"           Width="400" Grid.Row="15" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding CustomerNotice}"            Width="400" Grid.Row="16" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsFinished, Converter={StaticResource StringToBoolean}}" Width="400" Grid.Row="17" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsConfirmed, Converter={StaticResource StringToBoolean}}" Width="400" Grid.Row="18" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding AddittionalCost}"           Width="400" Grid.Row="19" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding ServiceProviderComment}"    Width="400" Grid.Row="20" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>
                    <TextBox Grid.Column="1" Text="{Binding OrderItemReports}"          Width="400" Grid.Row="21" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center" Height="28" Margin="0,6"/>






